{
  "name": "myerp",
  "version": "0.1.0",
  "private": true,
  "description": "Modular Multi-Tenant SaaS ERP System",
  "scripts": {
    "dev": "pnpm --filter '@myerp/backend' --filter '@myerp/frontend-web' --parallel dev",
    "build": "pnpm --recursive build",
    "lint": "pnpm --recursive lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "pnpm --recursive type-check",
    "prepare": "husky",
    "generate:secrets": "node scripts/generate-github-secrets.js"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "pnpm": {
    "overrides": {
      "node-forge": "^1.3.2",
      "cookie": "^0.7.0",
      "semver": ">=7.5.2",
      "glob": ">=10.5.0",
      "js-yaml": ">=3.14.2",
      "esbuild": ">=0.25.0",
      "send": ">=0.19.0"
    }
  },
  "dependencies": {
    "react-hot-toast": "^2.6.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
