# Server Configuration
PORT=3001
NODE_ENV=development

# Database
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://user:password@localhost:5432/myerp?schema=public"

# Authentication & Security
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"

# API Configuration
API_PREFIX="/api"

# Email Configuration (SMTP via Nodemailer)
# Works with Gmail, SendGrid, AWS SES, Outlook, and any SMTP server
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=noreply@myerp.com
# SMTP_SECURE=false  # true for port 465, false for 587/25

# SMS Configuration (Twilio)
# SMS_PROVIDER=twilio  # Options: 'twilio' or 'console' (for development)
# TWILIO_ACCOUNT_SID=your-account-sid
# TWILIO_AUTH_TOKEN=your-auth-token
# TWILIO_PHONE_NUMBER=+1234567890  # Your Twilio phone number

# Push Notifications (FCM - Firebase Cloud Messaging)
# FCM_PROJECT_ID=your-firebase-project-id
# FCM_PRIVATE_KEY_PATH=./path/to/service-account-key.json
# OR use inline key:
# FCM_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
# FCM_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# File Upload Configuration (for future use)
# UPLOAD_MAX_SIZE=10485760
# UPLOAD_DIR=./uploads

